<%= render'admins/items/link' %>

<div class="container">
	<h2>商品編集</h2>
	<%= form_for(@item) do |f| %>

	 <%= f.attachment_field :image %>

	<h4>商品名</h4>
	<%= f.text_field :name %>

	<h4>商品説明</h4>
	<%= f.text_area :description %>

	<h4>ジャンル</h4>

	<h4>税別価格</h4>
	<%= f.number_field :price %>

	<h4>販売ステータス</h4>
	<%= f.select :sale_status, [["販売中", "true"], ["売切れ", "false"]], :include_blank => "--選択してください--" %>
	<%= f.submit "変更を保存" %>
	<% end %>
</div>
