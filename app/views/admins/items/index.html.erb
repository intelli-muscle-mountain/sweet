

<main>
	<div class="container">
		<h2 class="item-headline">商品一覧</h2>
		 <table>
			<tr>
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>ステータス</th>
			</tr>
		   <% @items.each do |item| %>
			 <tr>
				<td><%= item.id %></td>
				<td><%= link_to item.name, admins_item_path(item) %></td>
				<td><%= item.price %></td>
				<td><%= item.genre.genre_name %></td>
				<td><% if item.sale_status == true %>
					販売中
				    <% else %>
					売切れ
					<% end %>
				</td>
			 </tr>
		   <% end %>
		 </table>

	</div>
</main>