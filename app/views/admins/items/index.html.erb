<%= render'admins/link' %>

<div class="container">
	<div class="row admin-item-head">
		<h2 class="col-xs-3">商品一覧画面</h2>
		<%= link_to "＋", new_admins_item_path, class:"col-xs-offset-8 admin-item-btn" %>
	</div>
	<div class="row">
		<div class="col-xs-11 col-xs-offset-1">
			<table class="table">
				<tr class="active">
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			   <% @items.each do |item| %>
					<tr>
						<td><%= item.id %></td>
						<td><%= link_to item.name, admins_item_path(item) %></td>
						<td><%= item.price %></td>
						<td><%= item.genre.genre_name %></td>
						<td><% if item.sale_status == true %>
								販売中
						    <% else %>
								売切れ
							<% end %>
						</td>
					</tr>
			    <% end %>
			</table>
		</div>
	</div>
</div>

