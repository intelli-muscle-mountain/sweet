

<div class="container">
	<h2>商品　新規登録</h2>
	<%= form_for(@item, url:admins_items_path(@item),method: :post) do |f| %>

	<%= f.attachment_field :image %>

	<h4>商品名</h4>
	<%= f.text_field :name %>

	<h4>商品説明</h4>
	<%= f.text_area :description %>

	<h4>ジャンル</h4>
	<%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>

	<h4>税別価格</h4>
	<%= f.number_field :price %>円

	<h4>販売ステータス</h4>
	<%= f.select :sale_status, [["販売中", "true"], ["売切れ", "false"]], :include_blank => "--選択してください--" %>
	<%= f.submit "新規登録" %>
	<% end %>
</div>

