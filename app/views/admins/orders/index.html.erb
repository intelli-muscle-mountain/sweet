<%= render'admins/link' %>

<div class="container">
	<div class="row admin-item-head">
		<h2 class="col-xs-3">注文一覧画面</h2>
	</div>
	<div class="row">
		<div class="col-xs-11 col-xs-offset-1">
			<table class="table">
				<tr class="active">
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			   <% @orders.each do |order| %>
				<tr>
					<td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admins_order_path(order) %></td>
					<td><%#= order.customer.last_name + order.customer.first_name %><%= order.customer.full_name %></td>
					<td><%= order.total_quantity.to_s %></td>
					<td><%= order.order_status %></td>
				</tr>
			    <% end %>
			</table>
		</div>
	</div>
</div>
