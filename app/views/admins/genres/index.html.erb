

<div class="container">
	<h2 class="genre-headline">ジャンル追加・一覧画面</h2>

	<%= form_for(@genre, url: admins_genres_path) do |f| %>
		<p>ジャンル</p>
	    <%= f.text_field :genre_name %>
	    <%= f.radio_button :genre_status, :true %>
	    <%= f.label :genre_status, "有効" %>
	    <%= f.radio_button :genre_status, :false %>
	    <%= f.label :genre_status, "無効" %>
		<%= f.submit "追加",class: "btn btn-primary" %>
	<% end %>

	<table>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
		</tr>
			<tr>
				<% @genres.each do |genre| %>
					<th><%= genre.genre_name %></th>
					<th><% if genre.genre_status == true %>
						有効
						<% else %>
						無効
						<% end %>
					</th> 
					<th><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn-sm btn-success" %></th>
				<% end %>
			</tr>
	</table>
</div>