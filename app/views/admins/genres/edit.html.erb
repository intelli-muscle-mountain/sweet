
<div class="container">
	<h2 class="genre-headline">ジャンル編集画面</h2>

	<%= form_for(@genre, url: admins_genre_path) do |f| %>
	<p>ジャンル</p>
    	<%= f.text_field :genre_name %>
	    <%= f.label :genre_status, "有効" %>
	    <%= f.radio_button :genre_status, :true %>
	    <%= f.label :genre_status, "無効" %>
	     <%= f.radio_button :genre_status, :false %>
		<%= f.submit "変更を保存する", class: "btn btn-primary" %>
	<% end %>
</div>