<%= render'admins/link' %>

<div class="container">
	<h1 >会員編集画面</h1>
	<div class="row">
		<%= form_for(@customer, url:admins_customer_path(@customer)) do |f| %>
			<table>
				<tr class="customer-tr">
					<td class="col-xs-4">会員ID</td>
					<td class="col-xs-8"><%= @customer.id %></td>
				</tr>

				<tr class="customer-tr">
					<td class="col-xs-4">氏名</td>
					<td class="col-xs-8">
						<%= f.text_field :last_name %>
						<%= f.text_field :first_name %>
					</td>
				</tr>

				<tr class="customer-tr">
					<td class="col-xs-4">フリガナ</td>
					<td class="col-xs-8">
						<%= f.text_field :last_name_kana %>
						<%= f.text_field :first_name_kana %>
					</td>
				</tr>

				<tr class="customer-tr">
					<td class="col-xs-4">郵便番号</td>
					<td class="col-xs-8"><%= f.text_field :postal_code %></td>
				</tr>

				<tr class="customer-tr">
					<td class="col-xs-4">住所</td>
					<td class="col-xs-8"><%= f.text_area :address %></td>
				</tr>

				<tr class="customer-tr">
					<td class="col-xs-4">電話番号</td>
					<td class="col-xs-8"><%= f.text_field :phone_number %></td>
				</tr>

				<tr class="customer-tr">
					<td class="col-xs-4">メールアドレス</td>
					<td class="col-xs-8"><%= f.text_field :email %></td>
				</tr>

				<tr class="customer-tr">
					<td class="col-xs-4">会員ステータス</td>
					<td class="col-xs-8">
						<%= f.radio_button :customer_status, :true, id:"customer-availability" %>
						<%= f.label :customer_status, "有効", for:"customer-availability" %>
						<%= f.radio_button :customer_status, :false, id:"customer-invalid" %>
						<%= f.label :customer_status, "退会済み", for:"customer-invalid" %>
					</td>
				</tr>
			</table>

			<%= f.submit "変更を保存する", class:"btn btn-primary"%>
		<% end %>
	</div>
</div>