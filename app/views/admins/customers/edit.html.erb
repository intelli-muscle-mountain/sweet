<%= render'admins/link' %>

<div class="container">
	<h1>会員編集画面</h1>

	<p>会員ID</p>
	<span><%= @customer.id %></span>
	<%= form_for(@customer, url:admins_customer_path(@customer)) do |f| %>
		<p>氏名</p>
		<%= f.text_field :last_name %>
		<%= f.text_field :first_name %>

		<p>フリガナ</p>
		<%= f.text_field :last_name_kana %>
		<%= f.text_field :first_name_kana %>

		<p>郵便番号</p>
		<%= f.text_field :postal_code %>

		<p>住所</p>
		<%= f.text_area :address %>

		<p>電話番号</p>
		<%= f.text_field :phone_number %>

		<p>メールアドレス</p>
		<%= f.text_field :email %>

		<p>会員ステータス</p>
		<%= f.radio_button :customer_status, :true %>
		<%= f.label :customer_status, "有効" %>
		<%= f.radio_button :customer_status, :false %>
		<%= f.label :customer_status, "退会済み" %>

		<%= f.submit "変更を保存する" %>
	<% end %>
</div>