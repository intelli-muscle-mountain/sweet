<div class="container">
	<h1>マイページ</h1>
	<h2>登録情報編集</h2>
	<%= link_to "退会する", withdraw_customer_path(@customer) %>

	<%= form_for(@customer) do |f| %>
		<table>
			<tr>
				<td>氏名</td>
				<td>
					<%= f.text_field :last_name %>
					<%= f.text_field :first_name %>
				</td>
			</tr>
			<tr>
				<td>カナ</td>
				<td>
					<%= f.text_field :last_name_kana %>
					<%= f.text_field :first_name_kana %>
				</td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td><%= f.text_field :postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td><%= f.text_area :address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td><%= f.text_field :phone_number %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= f.text_field :email %></td>
			</tr>
		</table>
		<%= f.submit "編集内容を保存する" %>
	<% end %>
</div>