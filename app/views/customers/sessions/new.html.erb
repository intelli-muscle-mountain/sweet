<%= render'customers/link' %>

<div class="row container">
  <div class="col-xs-8 col-xs-offset-2">
    <h3>会員の方はこちらからログイン</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row field">
        <%= f.label :email, "メールアドレス", class:"col-xs-2 col-xs-offset-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-6" %>
      </div>

      <div class="row field">
        <%= f.label :password, "パスワード", class:"col-xs-2 col-xs-offset-1" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-6" %>
      </div>

      <div class="row" style="margin-top: 10px;">
        <div class="col-xs-4 col-xs-offset-6">
          <%= link_to "=> パスワードを忘れた方はこちら", new_password_path(resource_name) %>
        </div>
      </div>

      <div class="row actions" style="margin-top: 20px;">
        <%= f.submit "ログイン", class:"col-xs-2 col-xs-offset-5 btn btn-primary" %>
      </div>
    <% end %>

    <h3>登録がお済みでない方</h3>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-1" style="font-size: 16px;">
          <%= link_to "こちら", new_registration_path(resource_name) %>
          <span> から新規登録を行ってください</span>
        </div>
    </div>
  </div>

</div>