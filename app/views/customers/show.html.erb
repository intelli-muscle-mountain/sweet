<%= render'customers/link' %>

<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<p style="font-size:20px;">マイページ</p>
			<div class="row">
				<h2 class="col-xs-3">登録情報</h2>
				<%= link_to "編集する", edit_customer_path(@customer), class:"col-xs-2 btn btn-primary", style:"margin-top:20px;" %>
				<%= link_to "パスワードを変更する", edit_customer_registration_path(current_customer.id), class:"col-xs-3 btn btn-primary customer-btn", style:"margin-top:20px;" %>
			</div>
			<table class="table table-bordered">
				<tr>
					<td class="col-xs-2 active">氏名</td>
					<td class="col-xs-6"><%= @customer.last_name + " " + @customer.first_name %></td>
				</tr>
				<tr>
					<td class="active">カナ</td>
					<td><%= @customer.last_name_kana + " " + @customer.first_name_kana %></td>
				</tr>
				<tr>
					<td class="active">郵便番号</td>
					<td><%= "〒 " + @customer.postal_code %></td>
				</tr>
				<tr>
					<td class="active">住所</td>
					<td><%= @customer.address %></td>
				</tr>
				<tr>
					<td class="active">電話番号</td>
					<td><%= @customer.phone_number %></td>
				</tr>
				<tr>
					<td class="active">メールアドレス</td>
					<td><%= @customer.email %></td>
				</tr>
			</table>
			<div class="row">
				<h2 class="col-xs-3">配送先</h2>
				<%= link_to "一覧を見る",  addresses_path, class:"col-xs-2 btn btn-primary", style:"margin-top:20px;" %>
			</div>
			<div class="row">
				<h2 class="col-xs-3">注文履歴</h2>
				<%= link_to "一覧を見る",  orders_path, class:"col-xs-2 btn btn-primary", style:"margin-top:20px;" %>
			</div>
		</div>
		<div class="col-xs-4"></div>
	</div>
</div>