<%= render'customers/link' %>

<div class="container">
		 <table>
 			 <h2>ジャンル検索</h2>
    			 <h2 class="items-headline">ケーキ</h2>
		   <% @item.each do |item| %>
			 <tr>
			 	<%= link_to item_path(item) do %>
			 	<%= attachment_image_tag item, :image,:fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
			 	<% end %>
				<td><%= link_to item.name, item_path(item) %></td>
				<td><%= item.price %></td>
			 </tr>
		   　 <tr>
		   		<th></th>
				<th>商品名</th>
				<th>税抜価格</th>
			　</tr>
			<% end %>
		 </table>
</div>
