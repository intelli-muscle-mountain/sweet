<%= render'customers/link' %>

<div class="container">
	<div class="row">
		<div class="col-xs-2" style="border: 1px solid #000;">
 			<h3 style="border-bottom: 1px solid #000;">ジャンル検索</h3>
 			<table>
	 			<% @genres.each do |genre| %>
	 				<tr>
						<td>
							<%= link_to root_path(category: genre.genre_name) do %>
								<%= genre.genre_name %>
							<% end %>
						</td>
					</tr>
	 			<% end %>
	 		</table>
 		</div>
 		<div class="col-xs-9 col-xs-offset-1">
 			<% if params[:category].present? %>
 				<h2>
 					<%= @genre.genre_name %>
 					<span>(全<%= @items.length %>件)</span>
 				</h2>
 			<% else %>
 				<h2>全商品<span>(全<%= @items.length %>件)</span></h2>
 			<% end %>
 			<div class="row">
	 			<% @items.each do |item| %>
	 				<div class="col-xs-3">
		 				<div class="row">
			 				<%= link_to item_path(item) do %>
				 				<%= attachment_image_tag item, :image,:fill, 60, 60, format: 'jpeg', class: "col-xs-10 pull-left profile-img", fallback: "no_image.jpg", size:'160x160' %>
		 		　　　		<% end %>
	 					</div>
	 					<div class="row">
							<%= link_to item.name, item_path(item) %>
						</div>
						<div class="row">
							<%= item.price %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

