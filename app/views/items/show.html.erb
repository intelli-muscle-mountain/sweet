<div class="container">
	<h2>ジャンル検索</h2>


	 <%= attachment_image_tag @item, :image,:fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>

	<h4>商品名<%= @item.name %></h4>
	<h4>商品説明<%= @item.description %></h4>
	<h4>¥<%= @item.tax_included_price.to_i.to_s(:delimited, delimiter: ',') %>（税込）</h4>


		<%= form_for(@cartitem, url:cartitems_path, method: :poto) do |f| %>
			<%= f.number_field :quantity %>
			<%= f.hidden_field :item_id, :value => @item.id %>
			<%= f.hidden_field :customer_id, :value => current_customer.id %>
			<%= f.submit "カートに入れる" %>
		<% end %>


</div>
